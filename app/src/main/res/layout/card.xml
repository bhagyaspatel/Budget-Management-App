<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#fdfcdc">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/categ_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="category_name"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/date_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Jan 2022"
            android:textSize="15sp"
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/time_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 AM"
            android:textSize="15sp"
            android:gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/date_val"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/text_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categ_name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Amount:"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/amount_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="amount_value"
            android:textSize="20sp"
            android:layout_below="@id/categ_name"
            android:layout_toRightOf="@+id/text_amount"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is commment "
            android:textSize="20sp"
            android:layout_below="@id/amount_val"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>